{
  "name": "siapee_server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:win": "cross-env HOST=127.0.0.1 PORT=4001 tsx watch src/server.ts",
    "build": "tsc -p .",
    "start": "node dist/server.js",
    "prepare": "prisma generate",
    "lint": "echo \"(add eslint later)\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "db:seed": "prisma db seed",
    "test": "vitest run --reporter=default",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^5.16.2",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.7",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "prisma": "^5.16.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
